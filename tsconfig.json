{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "baseUrl": ".",
        "jsx": "preserve",
        "module": "ES2022",
        "moduleResolution": "node",
        "paths": {
            "@components/*": ["src/components/*"]
        },
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "strict": true,
        "target": "ES2022"
    },
    "include": ["src"]
}
